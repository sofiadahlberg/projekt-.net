@model BookingApp.Models.Treatment

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Treatment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApiKeyRequired)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApiKeyRequired)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
              @{
        var customer = Model.Customer;
    }

    @if (customer != null)
    {
        <text>@customer.Firstname @customer.Lastname</text>
    }
    else
    {
        <text>N/A</text>
    }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TimeInterval)
        </dt>
        <dd class = "col-sm-10">
          @{
        var timeIntervalId = Model.TimeInterval?.TimeIntervalId;
    }

    @if (timeIntervalId != null)
    {
        @Html.DisplayFor(_ => timeIntervalId)
    }
    else
    {
        <text>N/A</text>
    }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TreatmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
